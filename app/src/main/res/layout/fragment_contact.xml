<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactFragment">


        <ImageView
            android:id="@+id/bgapp5"
            android:layout_width="411dp"
            android:layout_height="729dp"
            android:scaleType="fitXY"
            android:src="@drawable/orangeback"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/contact_us_representative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="32dp"
            android:text="צור קשר:"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/fullname_representative"
            android:layout_width="362dp"
            android:layout_height="43dp"
            android:layout_marginTop="52dp"
            android:ems="10"
            android:hint="שם מלא"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.551"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact_us_representative" />

        <EditText
            android:id="@+id/companyname_representative"
            android:layout_width="359dp"
            android:layout_height="37dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="16dp"
            android:ems="10"
            android:hint="שם חברה"
            app:layout_constraintTop_toBottomOf="@+id/fullname_representative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="28dp" />

        <EditText
            android:id="@+id/mailaddress_representative"
            android:layout_width="359dp"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:ems="10"
            android:hint="כתובת מייל"
            android:inputType="textEmailAddress"
            app:layout_constraintBottom_toTopOf="@+id/phonenumber_representative"
            app:layout_constraintTop_toBottomOf="@+id/companyname_representative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="28dp" />

        <EditText
            android:id="@+id/phonenumber_representative"
            android:layout_width="358dp"
            android:layout_height="43dp"
            android:layout_marginTop="17dp"
            android:ems="10"
            android:hint="מספר פלאפון"
            android:inputType="phone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mailaddress_representative"
            tools:layout_editor_absoluteX="28dp" />

        <EditText
            android:id="@+id/subject_representative"
            android:layout_width="360dp"
            android:layout_height="40dp"
            android:layout_marginTop="76dp"
            android:ems="10"
            android:hint="נושא הפנייה"
            app:layout_constraintTop_toBottomOf="@+id/phonenumber_representative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="25dp" />

        <EditText
            android:id="@+id/cont_representative"
            android:layout_width="352dp"
            android:layout_height="129dp"
            android:layout_margin="8dp"
            android:ems="10"
            android:hint="תוכן הפנייה"
            android:iconifiedByDefault="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/subject_representative"
            tools:layout_editor_absoluteX="27dp"
            tools:layout_editor_absoluteY="468dp" />

        <Button
            android:id="@+id/btn_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="36dp"
            android:text="שלח"
            app:layout_constraintBottom_toBottomOf="@+id/bgapp5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageButton
            android:id="@+id/contactImage_representative"
            android:layout_width="110dp"
            android:layout_height="106dp"
            app:layout_constraintBottom_toTopOf="@+id/fullname_representative"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.099"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/mail"
            tools:ignore="UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>
