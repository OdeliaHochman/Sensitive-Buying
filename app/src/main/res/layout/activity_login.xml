<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:gravity="right"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/titleLogin_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="התחברות"
            android:textSize="22dp"/>

        <EditText
            android:id="@+id/email_editTxt"
            android:inputType="textEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="הכנס מייל" />

        <EditText
            android:id="@+id/password_editTxt"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="right"
            android:hint="הכנס סיסמה" />


        <Button
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="התחבר" />


        <ProgressBar
            android:id="@+id/pb_loading"
            android:layout_height="42dp"
            android:layout_width="42dp"
            android:layout_margin="8dp"
            android:layout_gravity="center"
            android:visibility="invisible"
            />

        <TextView
            android:id="@+id/register_txtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="לא רשום ? הירשם עכשיו" />



    </LinearLayout>

</LinearLayout>