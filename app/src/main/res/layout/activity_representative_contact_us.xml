<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.represntative.RepresentativeContactUsActivity">


<ImageView
    android:id="@+id/bgapp1_fragmentContact_rep"
    android:layout_width="505dp"
    android:layout_height="113dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:scaleType="fitXY"
    android:src="@drawable/back2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.908"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />


<TextView
    android:id="@+id/title_fragmentContact_rep"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="52dp"
    android:text="צור קשר"
    android:textColor="@color/common_google_signin_btn_text_dark_default"
    android:textSize="35dp"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.45" />

<LinearLayout
    android:id="@+id/linearLayout2"
    android:layout_width="397dp"
    android:layout_height="350dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="50dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="30dp"
    android:gravity="right"
    android:orientation="vertical"
    app:layout_constraintBottom_toTopOf="@+id/btn_send_rep"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/bgapp1_fragmentContact_rep">

    <EditText
        android:id="@+id/fullname_contactUs_rep"
        android:layout_width="359dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="שם מלא"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_fragmentContact_rep" />


    <EditText
        android:id="@+id/phonenumber_contactUs_rep"
        android:layout_width="358dp"
        android:layout_height="43dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:hint="מספר פלאפון"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fullname_contactUs_rep"
        android:gravity="right"
        tools:layout_editor_absoluteX="28dp" />

    <EditText
        android:id="@+id/subject_contactUs_rep"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="נושא הפנייה"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phonenumber_contactUs_rep"
        tools:layout_editor_absoluteX="25dp" />

    <EditText
        android:id="@+id/content_contactUs_rep"
        android:layout_width="352dp"
        android:layout_height="70dp"
        android:layout_margin="8dp"
        android:ems="10"
        android:hint="תוכן הפנייה"
        android:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/subject_contactUs_rep"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="468dp" />

</LinearLayout>

<Button
    android:id="@+id/btn_send_contactUs_rep"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="90dp"
    android:text="שלח"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.498"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />

    <ImageButton
        android:id="@+id/contactImage_contactUs_rep"
        android:layout_width="122dp"
        android:layout_height="127dp"
        android:background="#0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/mail"
        tools:ignore="MissingConstraints,UnknownId" />


</androidx.constraintlayout.widget.ConstraintLayout>



